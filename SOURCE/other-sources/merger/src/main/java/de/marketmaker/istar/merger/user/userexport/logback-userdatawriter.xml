<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5p %d{dd MMM HH:mm:ss} [%t] %c{0} - %m%n</pattern>
        </encoder>
    </appender>
    <logger name="de.marketmaker" level="INFO"/>
    <logger name="com.vwd" level="INFO"/>
    <root level="ERROR">
        <appender-ref ref="stdout"/>
    </root>
</configuration>